extends ../layout

block content
	.container
		.row
			.col-sm-6
				form.form-horizontal(method="POST",action="/user/signup")
					.form-group
						label.col-sm-2.control-label(for="signupName") 用户
						.col-sm-10
							input.form-control#signupName(name="user[name]", type="text", placeholder="Username")
					.form-group
						label.col-sm-2.control-label(for="signupPassword") 密码
						.col-sm-10
							input.form-control#signupPassword(name="user[password]", type="text", placeholder="password")
					.form-group
						.col-sm-offset-2.col-sm-10
							button.btn.btn-dedault(type="submit") Sign up
				